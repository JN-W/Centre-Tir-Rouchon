{% extends 'base.html.twig' %}

{% block title %}Login page{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" >{{ error.messageKey }}</div>
    {% endif %}
    <form method="post" class="container">
        <label for="username">Nom d'utilisateur</label>
        <input type="text" id="username" name="_username" class="form-control" required />
        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" class="form-control" required />

        <input type="hidden" name="_target_path" value="/blog" />

        <button type="submit" class="btn btn-primary m-3">Connexion</button>

    </form>

{% endblock %}
